---
layout: layouts/base.njk
permalink: '/around-the-web/'
templateClass: 'tmpl-article-list'
title: 'Around the Web'
pageCSS: 'text'
meta:
  description: 'Around the web is a (weekly) digest of other people’s writing.'
---

<main id="main" class="homepage-content" tabindex="-1">
  <header class="archive-header u-floral-heart-gradient">
    <h1 class="main-headline">{{ title }}</h1>
  </header>
  <ol class="article-list u-global-padding" role="list">
    {%- for post in collections.aroundTheWeb %}
      {% set linkClass = 'article-card__link' %}
      {% set id = post.dates.publish %}
      <li>
        <article class="article-card" aria-labelledby="title-{{ id }}">
          <h2
            class="article-card__headline"
            id="title-{{ id }}"
          >
            <a
                href="{{ post.data.permalink }}"
                class="{{ linkClass }}"
              >{{ post.data.dateRange.start }}–{{ post.data.dateRange.end }}</a>
          </h2>
          <p class="article-card__date ">
            <span class="sr-only">Published: </span>
            <time
              datetime="{{ post.data.dates.publish }}"
              class="type-is-aside"
            >
              {{ post.data.dateRange.end }}
            </time>
          </p>
          <p>{{ post.data.intro | md | safe }}</p>
        </article>
      </li>
    {% endfor -%}
  </ol>
</main>