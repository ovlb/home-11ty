---
layout: layouts/posts.njk
permalink: '/text/'
---


<main id="main" class="homepage-content" tabindex="-1">
  <h1 class="main-headline">Scribbles on digital paper</h1>
  <ol>
    {% for post in articles.posts %}
      {% set linkClass = 'article-card__link' %}

      {% if post.isInternal === false %}
        {% set linkClass = linkClass + ' -external' %}
      {% endif %}

      <li>
        <article>
          <p class="aside">{{ post.date | displayDate }}</p>
          <h2><a href="{{ post.permalink }}" class="{{ linkClass }}">{{ post.title }}</a></h2>
          <p>{{ post.intro }}</p>
          {% if post.isInternal === false %}
            <p class="aside">Published at {{ post.externalPost.fields.medium }}</p>
          {% endif %}
        </article>
      </li>
    {% endfor %}
  </ol>
</main>