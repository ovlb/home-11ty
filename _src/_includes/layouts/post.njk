{% extends 'layouts/base.njk' %}

{% set templateClass = 'tmpl-single-post' %}
{% set title = post.title %}

{% block content %}
  <main id="main text" tabindex="-1">
    <header class="text__header">
      <p class="aside">
        {{ post.categories[0].fields.title + '–' if post.categories else '' }}{{ post.date | displayDate }}
      </p>
      <h1>{{ post.title }}</h1>
      {% if post.contentIntro %}
        <p class="text__intro">
          {{ post.contentIntro | md | safe }}
        </p>
      {% endif %}
    </header>
    {{ content | safe }}
    <section role="section" class="pagination-navigation text__pagination" aria-labelledby="pgntn-hdln">
      <h2 id="pgntn-hdln">Other things I’ve written</h2>
      {% paginationItem 'previous', pagination.href.previous, articles.ownPosts %}
      {% paginationItem 'next', pagination.href.next, articles.ownPosts %}
    </section>
  </main>
{% endblock %}