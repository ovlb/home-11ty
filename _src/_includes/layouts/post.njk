{% extends 'layouts/base.njk' %}

{% set templateClass = 'tmpl-single-post' %}
{% set title = post.title %}

{% block content %}
  <main id="main" tabindex="-1">
    <header class="post-header">
      <p class="aside">
        {{ post.categories[0].fields.title + 'â€“' if post.categories else '' }}{{ post.date | displayDate }}
      </p>
      <h1>{{ post.title }}</h1>
      {% if post.contentIntro %}
        <p class="text__intro">
          {{ post.contentIntro | md | safe }}
        </p>
      {% endif %}
    </header>
    {{ content | safe }}
  </main>
{% endblock %}