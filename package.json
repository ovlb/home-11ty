{
  "name": "@ovl/home-11ty",
  "private": true,
  "version": "7.0.0",
  "description": "My homepage, built with Eleventy.",
  "scripts": {
    "build": "ELEVENTY_ENV=production eleventy",
    "lint": "concurrently \"npm:lint:*\"",
    "lint:css": "stylelint '**/*.pcss' --fix",
    "lint:js": "eslint \"_src/**/*.js\" --ignore-pattern '!.eleventy.js' --fix",
    "serve": "concurrently \"npm:serve:*\"",
    "serve:11ty": "ELEVENTY_ENV=development eleventy --serve --quiet",
    "test": "ava"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0-beta.8",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "autoprefixer": "^9.7.6",
    "ava": "^3.8.2",
    "clean-css": "^4.2.3",
    "concurrently": "^5.1.0",
    "contentful": "^7.14.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "install": "^0.13.0",
    "lint-staged": "^10.2.2",
    "markdown-it-anchor": "^5.2.7",
    "markdown-it-prism": "^2.0.5",
    "npm": "^6.14.11",
    "parcel-bundler": "^1.12.4",
    "postcss": "^8.2.13",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.0",
    "precss": "^4.0.0",
    "prettier": "^2.0.2",
    "sass": "^1.26.3",
    "stylelint": "^13.3.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-prettier": "^1.1.2"
  },
  "keywords": [],
  "author": "Oscar Braunert",
  "license": "MIT",
  "engines": {
    "node": "^12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint:js"
    ],
    "_src/**/*.(p)?css": [
      "npm run lint:css"
    ]
  },
  "dependencies": {
    "markdown-it": "^12.3.2",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-attribution": "^0.1.4",
    "markdown-it-container": "^3.0.0",
    "markdown-it-footnote": "^3.0.3"
  }
}
